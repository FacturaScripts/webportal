<view>
    <columns>
        <column name="code" display="none" order="100">
            <widget type="text" fieldname="idpage" onclick="EditWebPage" />
        </column>
        <column name="permalink" display="left" order="110">
            <widget type="text" fieldname="permalink" />
        </column>
        <column name="lang-code" display="center" order="125">
            <widget type="text" fieldname="langcode" />
        </column>
        <column name="showonmenu" display="center" order="130">
            <widget type="checkbox" fieldname="showonmenu" />
        </column>
        <column name="showonfooter" display="center" order="140">
            <widget type="checkbox" fieldname="showonfooter" />
        </column>
        <column name="position-number" display="right" order="150">
            <widget type="number" fieldname="posnumber" />
        </column>
    </columns>
</view>
