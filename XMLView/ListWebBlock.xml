<view>
    <columns>
        <column name="code" display="none" order="100">
            <widget type="text" fieldname="idblock" onclick="EditWebBlock" />
        </column>
        <column name="type" order="110">
            <widget type="text" fieldname="type" />
        </column>
        <column name="page" order="120">
            <widget type="select" fieldname="idpage">
                <values source="webpages" fieldcode="idpage" fieldtitle="permalink"></values>
            </widget>
        </column>
        <column name="content" order="130">
            <widget type="textarea" fieldname="content" />
        </column>
        <column name="sort" display="right" order="140">
            <widget type="number" fieldname="ordernum" decimal="0" />
        </column>
        <column name="lastmod" title="last-update" display="right" order="150">
            <widget type="date" fieldname="lastmod" />
        </column>
    </columns>
    <rows>
        <row type="status" fieldname="type">
            <option color="warning">meta</option>
            <option color="warning">css</option>
            <option color="warning">javascript</option>
            <option color="warning">javascriptWithCookies</option>
            <option color="warning">txt</option>
            <option color="success">body</option>
            <option color="success">bodyContainer</option>
        </row>
    </rows>
</view>