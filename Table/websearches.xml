<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : websearches.xml
    Author     : Carlos Garcia Gomez
    Description:
        Structure for the websearches table.
-->
<table>
    <column>
        <name>creationdate</name>
        <type>date</type>
    </column>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('websearches_id_seq'::regclass)</default>
    </column>
    <column>
        <name>lastip</name>
        <type>character varying(40)</type>
    </column>
    <column>
        <name>lastmod</name>
        <type>date</type>
    </column>
    <column>
        <name>numresults</name>
        <type>integer</type>
    </column>
    <column>
        <name>query</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>
    <column>
        <name>visitcount</name>
        <type>integer</type>
        <default>0</default>
    </column>
    <constraint>
        <name>websearches_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>uniq_websearches</name>
        <type>UNIQUE (query)</type>
    </constraint>
</table>