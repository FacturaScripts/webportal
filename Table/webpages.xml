<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : webpages.xml
    Author     : Carlos Garcia Gomez
    Description:
        Structure for the webpages table.
-->
<table>
    <column>
        <name>creationdate</name>
        <type>date</type>
    </column>
    <column>
        <name>customcontroller</name>
        <type>character varying(30)</type>
    </column>
    <column>
        <name>description</name>
        <type>character varying(300)</type>
        <null>NO</null>
    </column>
    <column>
        <name>equivalentpage</name>
        <type>character varying(30)</type>
    </column>
    <column>
        <name>icon</name>
        <type>character varying(25)</type>
    </column>
    <column>
        <name>idpage</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('webpages_idpage_seq'::regclass)</default>
    </column>
    <column>
        <name>langcode</name>
        <type>character varying(2)</type>
    </column>
    <column>
        <name>lastip</name>
        <type>character varying(40)</type>
    </column>
    <column>
        <name>lastmod</name>
        <type>date</type>
    </column>
    <column>
        <name>menu</name>
        <type>character varying(40)</type>
    </column>
    <column>
        <name>noindex</name>
        <type>boolean</type>
        <null>NO</null>
        <default>false</default>
    </column>
    <column>
        <name>ordernum</name>
        <type>integer</type>
        <null>NO</null>
        <default>100</default>
    </column>
    <column>
        <name>permalink</name>
        <type>character varying(200)</type>
        <null>NO</null>
    </column>
    <column>
        <name>shorttitle</name>
        <type>character varying(50)</type>
    </column>
    <column>
        <name>showonfooter</name>
        <type>boolean</type>
        <null>NO</null>
        <default>true</default>
    </column>
    <column>
        <name>showonmenu</name>
        <type>boolean</type>
        <null>NO</null>
        <default>true</default>
    </column>
    <column>
        <name>title</name>
        <type>character varying(200)</type>
        <null>NO</null>
    </column>
    <column>
        <name>visitcount</name>
        <type>integer</type>
        <default>0</default>
    </column>
    <constraint>
        <name>webpages_pkey</name>
        <type>PRIMARY KEY (idpage)</type>
    </constraint>
    <constraint>
        <name>uniq_webpages_permalink</name>
        <type>UNIQUE (permalink,langcode)</type>
    </constraint>
</table>